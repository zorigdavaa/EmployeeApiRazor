@inherits DisplayEmployeeBase

    <div class="card m-3" style="min-width:18rem; max-width:30.5%">
        <div class="card-header">
            <input type="checkbox" @onchange="CheckBoxChanged" />
            <h3>@Employee.FirstName @Employee.LastName</h3>
        </div>
        <div class="card-body">
            <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath" />
        </div>
        @if (ShowFooter)
        {
            <div class="card-footer text-center">
                <a href="@($"/employeedetails/{Employee.EmployeeId}")" class="btn btn-primary">View</a>
                <a href="editemployee/@Employee.EmployeeId" class="btn btn-primary">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>
            </div>
        }
    </div>